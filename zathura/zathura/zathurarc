### Zathura Config ###

#map [mode] <binding> <shortcut function> <argument>

set guioptions ""
set font "Fira Code 20"
set adjust-open "best-fit"

### Colors ###
set highlight-color "#3498DB"
set highlight-active-color "#e74c3c"

set-default-bg "#000"
set default-fg "#FFF"

#set statusbar-bg "#000"
#set statusbar-fg "#FFF"

#set inputbar-bg "#000"
#set inputbar-fg "#FFF"

#set notification-bg "#2b303b"
#set notification-fg "#c0c5ce"

#set notification-error-bg "#343d46"
#set notification-error-fg "#c0c5ce"

#set notification-warning-bg #343d46"
#set notification-warning-fg "#c0c5ce"

#set recolor false

#set recolor-darkcolor "#93a1a1"
#set recolor-lightcolor "#073642"
